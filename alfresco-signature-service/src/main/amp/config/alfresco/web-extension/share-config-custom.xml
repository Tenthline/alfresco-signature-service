<alfresco-config>

	<!-- Share config elements for the doclib actions, coming soon! -->
	<config evaluator="string-compare" condition="DocLibActions">
		<actions>
		
			<action id="mycompany.doclib.action.addimagestopdffiles"
              icon="addimage"
              type="javascript"
              label="actions.addimages.menulabel">
			 <param name="function">onActionAddImagesToPdfFiles</param>
			 <param name="successMessage">message.addimages.success</param>
			 <param name="failureMessage">message.addimages.failure</param>
		 </action>
			
		</actions>
		
		<actionGroups>
			<actionGroup id="document-browse">
				<action index="502" id="mycompany.doclib.action.addimagestopdffiles"/>
			</actionGroup>
			<actionGroup id="document-details">
				<action index="502" id="mycompany.doclib.action.addimagestopdffiles"/>
			</actionGroup>
		</actionGroups>
	</config>
	
